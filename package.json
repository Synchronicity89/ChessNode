{
  "name": "chessnode",
  "version": "0.1.0",
  "private": true,
  "description": "Compact 64-bit chess engine experiments",
  "main": "src/position64.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/src/tests"],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
